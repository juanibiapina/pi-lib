{
	"name": "@juanibiapina/pi-extension-settings",
	"version": "0.4.0",
	"description": "Pi extension for centralized settings management across extensions",
	"type": "module",
	"main": "dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"clean": "rm -rf dist",
		"build": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"check": "biome check --write --error-on-warnings . && tsc --noEmit",
		"test": "node --test --import tsx test/*.test.ts",
		"prepublishOnly": "npm run clean && npm run build && npm run check"
	},
	"files": [
		"dist/**/*",
		"README.md"
	],
	"keywords": [
		"pi",
		"pi-package",
		"extension",
		"config",
		"utilities"
	],
	"pi": {
		"extensions": [
			"./dist/index.js"
		]
	},
	"author": "Juan Ibiapina",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/juanibiapina/pi-extension-settings.git"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"peerDependencies": {
		"@mariozechner/pi-coding-agent": "*",
		"@mariozechner/pi-tui": "*"
	},
	"dependencies": {
		"@standard-schema/spec": "^1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@mariozechner/pi-coding-agent": "^0.51.1",
		"@types/node": "^22.10.5",
		"arktype": "^2.1.29",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2"
	}
}
